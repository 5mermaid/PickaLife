<div class="card">
  <%= link_to experience_path(experience) do %>
  <div class="card__img" style="background-image: url('<%= cl_image_path experience.photo.key %>')">
    <div class="card__title">
      <%= experience.activity %>
    </div>
  </div>
  <% end %>
  <div class="card__info">
    <div class="card__place">
      <%= experience.place %>
      <div class="card__date">
        <%= experience.start_date.strftime("on %a. %d of %B") %>
      </div>
    </div>
    <div class="card__price">
      <%= experience.price %>,00â‚¬
    </div>
    <div class="card__description">
      <%= experience.description.truncate(90) %>
    </div>
    <div class="card__rating">
      <span class="card__icon"><%= icon('fas', 'star', class: 'strong') %></span>
      <%= rand(3.0..5).to_s.truncate(4, omission: '') %><span class="soft-text"> (293)</span>
    </div>
  </div>
  <div class="card__bottom">
    <%= link_to "Live it", experience_path(experience), class: "card__cta" %>
  </div>
</div>
