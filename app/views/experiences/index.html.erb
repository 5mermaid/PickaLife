<div class="wrapper">
  <div class="container mt-5 mb-4">
    <div class="experience-index__banner" style="background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1469854523086-cc02fe5d8800?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1008&q=80);">
    <div class="row">
      <div class="col-6 offset-3 experience-index__banner__content">
        <div class="experience-index__title">Where would you like to <span class="secondary-color">head</span>?
        </div>
        <%= render 'shared/searchbar', experience: @experience %>
      </div>
    </div>
    </div>
  </div>
  <div class="container mb-4">
    <%= render 'shared/titleSubtitle', title: 'Live your dreams', subtitle: 'Travel to the other part of the world in just a few ', subtitle_important: 'clicks' %>
    <div class="row mb-4">
      <% @experiences.each do |experience| %>
      <div class="col-xs-6 col-sm-3 my-2">
        <%= render 'shared/card', experience: experience %>
      </div>
      <% end %>
    </div>
  </div>
</div>

