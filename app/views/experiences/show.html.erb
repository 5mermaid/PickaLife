<div class="wrapper">
  <div class="container mt-5">
    <div class="row">
      <div class="col-12">
        <div class="banner -search -show" style="background-image: url('<%= cl_image_path @experience.photo.key %>')");">
          <div class="banner__title"><%= @experience.activity %> in <span class="secondary-color"><%= @experience.place %></span>.
          </div>
        </div>
      </div>
    </div>
    <div class="row mb-5">
      <div class="col-12">
        <div class="experience">
          <%= link_to experiences_path, class: 'experience__back' do %>
          <%= icon('fas', 'arrow-left') %> Back to
          experiences
          <% end %>
          <div>
            <%= link_to edit_experience_path(@experience), class: 'experience__setting' do %>
            <%= icon('fas', 'edit') %>
            <% end %>
            <%= link_to experience_path(@experience), method: :delete, data: { confirm: "Are you sure?" }, class: 'experience__setting' do %>
            <%= icon('fas', 'trash-alt') %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="row mb-5">
      <div class="col-5">
        <%= render 'shared/titleSubtitle', title: 'The host', subtitle: 'Discover who is your next favorite ', subtitle_important: 'Pickalifer' %>
        <%= render 'shared/userCard', experience: @experience %>
      </div>
      <div class="col-5 offset-2">
      </div>
    </div>
    <div class="wrapper">
      <%= render 'shared/titleSubtitle', title: 'You might also like', subtitle: 'The experiences you do not want to ', subtitle_important: 'miss' %>
      <div class="row mb-4">
        <% @experiences.each do |experience| %>
        <div class="col-xs-6 col-sm-3 my-2">
          <%= render 'shared/card', experience: experience %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
