
<%= simple_form_for @experience do |f|%>
  <%= f.input :photo%>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.input :activity %>
  <%= f.input :place %>
  <%= f.input :price %>
  <%= f.input :description, :input_html => {:rows => 1} %>
  <%= f.input :start_date, as: :date, html5: true %>
  <%= f.input :end_date, as: :date, html5: true %>

  <%= f.association :user, :as => :hidden, :input_html => { :value => current_user.id }  %>


  <%= f.submit "Update", class: "btn btn-primary" %>
<% end %>

<%= simple_form_for @experience, :url => experience_path(@experience), :method => :delete do |f|%>
  <%= f.submit "Destroy", class: "btn btn-primary" %>
<% end %>
